@model CityGenres


<div class="row">
    <div class="app">
        <img src="~/ticket/111.jpg" class="artistimg" alt="">
    </div>
     <div class="firstrow row mt-4 d-flex justify-content-center">
        <div class="col-md-8 d-flex align-items-center">
            <span class="" style="color: white; font-size:40px;">Artistler <span class="ms-5 brdr"></span></span>
            <span><a href="" style="color: white; text-decoration:none; font-size:15px;" class="ms-4"> <span class="me-2" style="font-size: 15px;">+</span> Ben Sanatçıyım</a></span>
        </div>
        <div class="row d-flex justify-content-center mt-5">
            <div class="col-md-8">
                <div class="row d-flex justify-content-between">
                        <div class="col-lg-5">
                            <div class="input-group c">
                                <span class=" input-group-text-0 spans"><i class="spans icn mt-2 fas fa-search spa"></i></span>
                                <form action="/searchartist">
                                    <input name="artist" type="text" class="rounded-0 form-control inttrs" placeholder="Artist ara..">
                                </form>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="input-group mb-3">
                                    <label class="input-group-text-0 spans" for="inputGroupSelect01"><i class="icn fas fa-map-marker-alt"></i></label>
                                    <select name="selectedValue" class="trs form-select  rounded-0" id="SelectedId">
                                        <option selected>Tüm Şehirler</option>
                                        @foreach (var item in Model.City)
                                        {
                                            <option value="">@item.Name</option>
                                        }
                                    </select>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="input-group mb-3">
                                <label class="input-group-text border-0 spans" for="inputGroupSelect01"><i class="icn far fa-calendar-alt"></i></label>
                                <select class="form-select  rounded-0 trs" id="">
                                    <option selected>Kategoriler</option>
                                    @foreach (var item in Model.Genres)
                                    {
                                        <option value="">@item.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between">
                          <span style="color: white; font-size:15px;" class="mt-3">Artistler (@Model.ArtistCount)</span>
                          <select name="" id="" class="form-select float-end trs rounded-0" style="width: 200px;">
                            <option selected>Popülerliğe göre</option>
                            <option value=""></option>
                          </select>
                        </div>
                        <hr style="color: white;" class="mt-3">
                    </div> 
                </div>
            </div> 
        </div>
    </div>
    <div class="container">
          <div class="fiverow row">
            <div class="col-md-9">
                <div class="row ">
                    @foreach (var item in Model.Artists)
                    {
                        <div class="col-md-6">
                        <div class="card crds border-0">
                            <a href=""> <img src="~/artist/@item.Image" style="width: 100%; object-fit:contain;" class="card-img-top" alt=""></a>
                        </div>
                        <div class="card-body">
                            <h3 class="card-title">@item.Name</h3>
                            <p class="card-text">@item.Country</p>
                            <p class="card-text">@item.Genres.Name</p>
                        </div>
                        </div>
                    }
                </div>
            </div>
            </div>
    </div>
</div>  