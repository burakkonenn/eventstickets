@model List<ArtistModel>



<div class="container-fluid">
    <div class="row mt-3">
         <div class="app">
            <img src="~/ticket/main2.jpg" class="artistimg" alt="">
        </div>
        <div class="firstrow mt-4">
              <div class="col-md-12">
            <h2 style="color: white;">Artist Listesi</h2>
            <hr style="color: turquoise;">
            <div class="col-md-2">
                <a asp-controller="Admin" asp-action="ArtistCreate" class="nav-link mb-4" style="color: turquoise;">Artist Ekle ></a>
            </div>
                <table class="table-sm  table table-bordered tabletrs">
                    <thead class="">
                        <tr style="color: white;">
                            <td style="width: 20px;">Id</td>
                            <td style="width: 30px;">Artist Adı</td>
                            <td style="width: 80px;">Tür</td>
                            <td style="width: 80px;">Ülkesi</td>
                            <td style="width: 30px;">Fotoğraf</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                             <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.Genres</td>
                                <td>@item.Country</td>
                                <td>
                                    <img src="~/artist/@item.Image" class="float-end" width="80" alt="">    
                                </td>
                                <td  style="width: 30px;">
                                    <a asp-controller="Admin" asp-action="ArtistEdit" asp-route-id="@item.Id" class="btn btn-outline-info float-end ms-2">Düzenle</a>

                                    <form asp-controller="Admin" asp-action="ArtistDelete"  method="POST" style="display: inline;">
                                        <input type="hidden" name="artistId" value="@item.Id">
                                        <button type="submit" class="btn btn-outline-secondary float-end">Sil</button>
                                    </form>
                                </td>
                          
                             </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        </div>
    </div>
</div>

